{
  "name": "weather-notify",
  "private": true,
  "type": "module",
  "version": "1.0.0",
  "license": "MIT",
  "scripts": {
    "test:unit": "jest --testPathPattern=unit",
    "test:unit:watch": "jest --testPathPattern=unit --watch",
    "test:db:up": "docker compose -f docker-compose-integration-tests.yml up -d --build",
    "test:db:down": "docker compose -f docker-compose-integration-tests.yml down",
    "test:db:health": "docker compose -f docker-compose-integration-tests.yml exec db_test pg_isready -U postgres -d weather_notify_test",
    "test:integration": "npm run test:db:up && npx jest --testPathPattern=integration --forceExit && npm run test:db:down",
    "test:integration:watch": "npm run test:db:up && npx jest --testPathPattern=integration --watch",
    "test:services:up": "docker compose -f docker-compose-e2e-tests.yml up -d --build",
    "test:services:down": "docker compose -f docker-compose-e2e-tests.yml down",
    "test:benchmark:up": "docker compose -f docker-compose-benchmark-tests.yml up -d --build",
    "test:benchmark:down": "docker compose -f docker-compose-benchmark-tests.yml down",
    "test:e2e": "npm run test:services:up && npx jest --testPathPattern=e2e --forceExit && npm run test:services:down",
    "test:e2e:watch": "npm run test:services:up && npx jest --testPathPattern=e2e --watch",
    "test:benchmark": "npm run test:benchmark:up && npx jest --testPathPattern=benchmark --forceExit && npm run test:benchmark:down",
    "test:e2e:benchmark": "npm run test:benchmark:up && npx jest --testPathPattern=e2e --watch",
    "arch:check": "npx depcruise apps/**/src",
    "arch:report": "npx depcruise --output-type json apps/**/src > docs/dependencies.json",
    "lint:type": "npx tsc --noEmit",
    "lint:js": "npx eslint . --max-warnings=0",
    "lint": "npm run lint:type && npm run lint:js",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "npm run start:prod:email-service && npm run start:prod:weather-service && npm run start:prod:subscription-service",
    "start:prod:email-service": "node dist/apps/email-service/src/main.js",
    "start:prod:weather-service": "node dist/apps/weather-service/src/main.js",
    "start:prod:subscription-service": "node dist/apps/subscription-service/src/main.js",
    "typeorm": "typeorm-ts-node-esm",
    "migration:generate": "npm run typeorm -- migration:generate -d dist/apps/subscription-service/ormconfig.js",
    "migration:run": "npm run typeorm -- migration:run -d dist/apps/subscription-service/ormconfig.js",
    "migration:revert": "npm run typeorm -- migration:revert -d dist/apps/subscription-service/ormconfig.js",
    "build": "tsc -p tsconfig.build.json && tsc-alias -p tsconfig.build.json && npm run build:copy",
    "build:copy": "shx cp package.json dist/",
    "build:email-service": "tsc -p tsconfig.build.json && tsc-alias -p tsconfig.build.json && npm run build:copy:email-service",
    "build:copy:email-service": "shx cp -r apps/email-service/email-templates dist/apps/email-service/",
    "build:weather-service": "tsc -p tsconfig.build.json && tsc-alias -p tsconfig.build.json",
    "build:subscription-service": "tsc -p tsconfig.build.json && tsc-alias -p tsconfig.build.json",
    "proto:generate:weather": "npx pbjs --es6 shared/generated/weather.js --ts shared/generated/weather.d.ts shared/proto/weather.proto",
    "proto:generate:email": "npx pbjs --es6 shared/generated/email.js --ts shared/generated/email.d.ts shared/proto/email.proto"
  },
  "dependencies": {
    "@eslint/js": "^9.28.0",
    "@grpc/grpc-js": "^1.13.4",
    "@grpc/proto-loader": "^0.7.15",
    "@nestjs-modules/mailer": "^2.0.2",
    "@nestjs/axios": "^4.0.0",
    "@nestjs/cache-manager": "^3.0.1",
    "@nestjs/common": "^10.3.2",
    "@nestjs/config": "^3.2.3",
    "@nestjs/core": "^10.3.2",
    "@nestjs/microservices": "^10.4.19",
    "@nestjs/platform-express": "^10.4.5",
    "@nestjs/schedule": "^6.0.0",
    "@nestjs/serve-static": "^4.0.2",
    "@nestjs/swagger": "^7.4.2",
    "@nestjs/typeorm": "^10.0.2",
    "@typescript-eslint/eslint-plugin": "^8.32.1",
    "@typescript-eslint/parser": "^8.33.1",
    "cache-manager-redis-store": "^3.0.1",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "eslint-import-resolver-typescript": "^4.3.5",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-jsdoc": "^50.6.17",
    "eslint-plugin-perfectionist": "^4.13.0",
    "eslint-plugin-require-explicit-generics": "^1.0.0",
    "eslint-plugin-sonarjs": "^3.0.2",
    "eslint-plugin-unicorn": "^59.0.1",
    "globals": "^16.2.0",
    "multer": "^1.4.5-lts.1",
    "mysql2": "^3.11.3",
    "nodemailer": "^7.0.3",
    "pg": "^8.13.0",
    "reflect-metadata": "^0.2.1",
    "rxjs": "^7.8.1",
    "smtp-tester": "^2.1.0",
    "swagger-ui-express": "^5.0.1",
    "typeorm": "^0.3.20"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.3.1",
    "@nestjs/schematics": "^10.1.0",
    "@nestjs/testing": "^10.4.17",
    "@stylistic/eslint-plugin": "^2.9.0",
    "@swc/cli": "^0.3.9",
    "@swc/core": "^1.4.0",
    "@types/eslint__js": "^8.42.3",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.14",
    "@types/multer": "^1.4.12",
    "@types/node": "^20.16.11",
    "@types/nodemailer": "^6.4.17",
    "@types/quoted-printable": "^1.0.2",
    "@types/supertest": "^6.0.2",
    "dependency-cruiser": "^16.10.4",
    "jest": "^29.7.0",
    "nock": "^14.0.5",
    "quoted-printable": "^1.0.1",
    "shx": "^0.4.0",
    "supertest": "^6.3.4",
    "ts-jest": "^29.3.4",
    "ts-loader": "^9.5.1",
    "ts-node": "^10.9.2",
    "tsc-alias": "^1.8.16",
    "tsconfig-paths": "^4.2.0"
  }
}
